
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name {{ DISKOVER_WEB_SERVER_NAME|d('_') }};

    root /var/www/public;
    index index.html index.htm index.php;

    # Load configuration files for the default server block.
    include /etc/nginx/default.d/*.conf;

    location / {
        # enable for basic auth
        #auth_basic "Restricted";
        #auth_basic_user_file /config/nginx/.htpasswd;
        try_files $uri $uri/ /index.php$is_args$args;
    }

    location /diskover-tools/ {
        include proxy_params;
        proxy_pass http://diskover-tools:8080/diskover-tools/;
    }
    location /rclone {
            include proxy_params;
            proxy_pass http://diskover-tools:8080/fileactions/rclone/rclone;
    }
    location /pdf {
            include proxy_params;
            proxy_pass http://diskover-tools:8080/fileactions/view_pdf/view_pdf;
        }
    location /fileactions/python {
            include proxy_params;
            proxy_pass http://diskover-tools:8080/fileactions/fileactions;
    }

    # deny access to .htaccess/.htpasswd files
    location ~ /\.ht {
        deny all;
    }
}

# Settings for a TLS enabled server.
#
server {
    listen       443 ssl;
    server_name  _;
    root         /var/www/public;

    ssl_certificate /etc/nginx/ssl/certificate.crt;
    ssl_certificate_key /etc/nginx/ssl/privatekey.key;
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Load configuration files for the default server block.
    include /etc/nginx/default.d/*.conf;

    error_page 404 /404.html;
    location = /404.html {
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
    }
}



